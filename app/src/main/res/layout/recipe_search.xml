<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_recipe_search"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1_recipe_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageView_recipefinderlogo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/recipefinderlogo2"/>

        <TextView
            android:id="@+id/Text_RecipeFinder"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginRight="60dp"
            android:text="@string/Text_WelcomeRecipeFinder"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:textColor="#000000"/>

    </LinearLayout>

    <EditText
        android:id="@+id/EditText_SearchField1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:hint="@string/EditText_SearchField1"
        android:textColorHint="#000000"
        />

    <EditText
        android:id="@+id/EditText_SearchField2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:hint="@string/EditText_SearchField2"
        android:textColorHint="#000000"/>

    <LinearLayout
        android:id="@+id/layout2_recipe_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Button_AddIngredient"
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:text="@string/Button_AddIngredient"
            android:textSize="10dp"
            android:background="#4CAF50"/>

        <EditText
            android:id="@+id/EditText_SearchField3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="60dp"
            android:hint="@string/EditText_SearchField3"
            android:textColorHint="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3_recipe_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/Button_AddIngredient2"
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:text="@string/Button_AddIngredient"
            android:textSize="10dp"
            android:background="#4CAF50"/>

        <EditText
            android:id="@+id/EditText_SearchField4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="60dp"
            android:hint="@string/EditText_SearchField4"
            android:textColorHint="#000000"/>

    </LinearLayout>

        <EditText
            android:id="@+id/EditText_SearchField5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:hint="@string/EditText_SearchField5"
            android:visibility="gone"
            android:textColorHint="#000000"/>


    <Button
        android:id="@+id/Button_Search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="@string/Button_Search"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#4CAF50"/>

    <Button
        android:id="@+id/Button_Show_All"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="@string/Button_ShowAll"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#4CAF50"/>

    <Button
        android:id="@+id/Button_My_Recipes"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="@string/Button_MyRecipes"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#4CAF50"/>


</LinearLayout>