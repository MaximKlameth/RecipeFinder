<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginBottom="60dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1_recipe_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageView_recipefinderlogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/recipefinderlogo2" />

            <TextView
                android:id="@+id/Text_RecipeFinder"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginRight="60dp"
                android:text="@string/Text_WelcomeRecipeFinder"
                android:textColor="#000000"
                android:textSize="40dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/Text_RecipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:text="@string/Text_Rezept1"
        android:textSize="20dp"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/Image_Rezept"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />

    <ScrollView
        android:id="@+id/ScrollView_descriptionSroll"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:layout_gravity="center"
        >

    <TextView
        android:id="@+id/Text_RecipeIngredientsList"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="@string/Text_RecipeIngredients"
        android:textColor="#000000"/>

    </ScrollView>

    <Button
        android:id="@+id/Button_SafeRecipe"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#4CAF50"
        android:text="@string/Button_safeText"
        android:textColor="#000000" />

</LinearLayout>